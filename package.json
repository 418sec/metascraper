{
  "name": "microlink-core",
  "description": "Get metadata from HTML",
  "homepage": "https://github.com/microlinkhq/microlink-core",
  "version": "0.0.0",
  "main": "index.js",
  "author": {
    "url": "https://github.com/microlinkhq"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/microlinkhq/microlink-core.git"
  },
  "bugs": {
    "url": "https://github.com/microlinkhq/microlink-core/issues"
  },
  "keywords": [
    "metadata"
  ],
  "dependencies": {
    "async": "~2.5.0",
    "cheerio": "~1.0.0-rc.2",
    "chrono-node": "~1.3.5",
    "condense-whitespace": "~1.0.0",
    "is-relative-url": "~2.0.0",
    "isostring": "0.0.1",
    "lodash": "~4.17.4",
    "normalize-url": "~1.9.1",
    "req-all": "~1.0.0",
    "sanitize-html": "~1.14.1",
    "smartquotes": "~2.3.1",
    "to-title-case": "~1.0.0",
    "url-regex": "~4.1.1"
  },
  "devDependencies": {
    "coveralls": "latest",
    "git-dirty": "latest",
    "husky": "latest",
    "json-future": "latest",
    "lint-staged": "latest",
    "mocha": "latest",
    "nyc": "latest",
    "prettier-standard": "latest",
    "should": "latest",
    "snap-shot": "latest",
    "standard": "latest",
    "standard-markdown": "latest"
  },
  "engines": {
    "node": "8"
  },
  "files": [
    "index.js",
    "src"
  ],
  "scripts": {
    "clean": "rm -rf node_modules",
    "coveralls": "nyc report --reporter=text-lcov | coveralls",
    "lint": "standard-markdown && standard",
    "precommit": "lint-staged",
    "pretest": "npm run lint",
    "pretty": "prettier-standard index.js {test,src}/**/*.js --single-quote",
    "test": "TZ=UTC NODE_ENV=test nyc mocha test"
  },
  "license": "MIT",
  "lint-staged": {
    "*.js": [
      "prettier-standard",
      "git add"
    ]
  },
  "standard": {
    "globals": [
      "describe",
      "it"
    ]
  }
}
